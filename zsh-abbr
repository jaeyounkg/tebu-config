abbr gco="git checkout"
abbr gcl="git clone"
abbr gt="git tag"
abbr gtl="git tag --list"
abbr gcl="git clone"
abbr glg="git lg1-specific"
abbr gco="git checkout"
abbr gcos="git checkout --recurse-submodules"
abbr gbr="git branch"
abbr gbra="git branch --all"
abbr gst="git status"
abbr gsh="git stash"
abbr gshl="git stash list"
abbr gcm="git commit"
abbr gcmm="git commit -m"
abbr gfc="git fetch"
abbr grb="git rebase"
abbr grbi="git rebase -i"
abbr gmg="git merge"
abbr gdf="git diff"
abbr gdfs="git diff --staged"
abbr gdc="git diff --compact-summary"
abbr gdcs="git diff --compact-summary --staged"
abbr grs="git reset"
abbr grt="git restore"
abbr grts="git restore --staged"
abbr gcp="git cherry-pick"
abbr gad="git add"
abbr gau="git add -u"
abbr gpu="git push origin"
abbr gpuf="git push --force-with-lease origin"
abbr gsm="git submodule"
abbr gsmi="git submodule init"
abbr gsmu="git submodule update"
abbr gpl="git pull origin"
abbr gac="git add -u && git commit -m"
abbr glgl="git lg1-specific --reflog"

